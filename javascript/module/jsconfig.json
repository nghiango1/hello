{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "app/*": ["./*"],
      "components/*": ["./src/*"]
    },
    "moduleResolution": "webpack",
    // Enable type checking
    "checkJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
