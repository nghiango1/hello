{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended-typescript-flavor-error"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "func-style": [
            "error",
            "expression"
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "jsdoc/require-jsdoc": [
            "error",
            {
                "require": {
                    "ClassDeclaration": true,
                    "MethodDefinition": true,
                    "FunctionExpression": true,
                    "ArrowFunctionExpression": true
                }
            }
        ]
    }
}
